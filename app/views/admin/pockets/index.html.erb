<p id="notice"><%= notice %></p>

<h1>Listing Pockets</h1>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pockets.each do |pocket| %>
      <tr>
        <td><%= pocket.color %></td>
        <td><%= pocket.image %></td>
        <td><%= link_to 'Show', [:admin, pocket] %></td>
        <td><%= link_to 'Edit', edit_admin_pocket_path(pocket) %></td>
        <td><%= link_to 'Destroy', [:admin, pocket], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pocket', new_admin_pocket_path %>
