<p id="notice"><%= notice %></p>

<h1>Listing Sweaters</h1>

<table>
  <thead>
    <tr>
      <th>Base</th>
      <th>Pocket</th>
      <th>Price</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sweaters.each do |sweater| %>
      <tr>
        <td><%= sweater.base_id %></td>
        <td><%= sweater.pocket_id %></td>
        <td><%= sweater.price %></td>
        <td><%= sweater.cost %></td>
        <td><%= link_to 'Show', sweater %></td>
        <td><%= link_to 'Edit', edit_sweater_path(sweater) %></td>
        <td><%= link_to 'Destroy', sweater, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

